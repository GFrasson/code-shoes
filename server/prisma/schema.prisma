// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Product {
    id String @id @default(uuid())

    name     String  @unique
    price    Float
    image    String?
    brand_id Int

    created_at DateTime @default(now())
    updated_at DateTime @default(now())

    @@map("products")
}
